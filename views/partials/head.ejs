<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'HelpDesk System' %></title>
    <link rel="stylesheet" href="/css/style.css">
    <!-- Add this line to include Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Include Socket.IO client library -->
    <script src="/socket.io/socket.io.js"></script>
    <!-- Only include custom socket.js on ticket details page -->
    <% if (typeof ticket !== 'undefined') { %>
        <meta name="user-name" content="<%= user.name %>">
        <meta name="user-role" content="<%= user.role %>">
        <script src="/js/socket.js"></script>
    <% } %>
</head>

<!-- Add this right after the header or at the top of your main content area -->
<div class="notifications-container">
    <% if(typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
        <div class="notification notification-success">
            <%= success_msg %>
        </div>
    <% } %>
    
    <% if(typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
        <div class="notification notification-error">
            <%= error_msg %>
        </div>
    <% } %>
    
    <% if(typeof warning_msg !== 'undefined' && warning_msg.length > 0) { %>
        <div class="notification notification-warning">
            <%= warning_msg %>
        </div>
    <% } %>
    
    <% if(typeof info_msg !== 'undefined' && info_msg.length > 0) { %>
        <div class="notification notification-info">
            <%= info_msg %>
        </div>
    <% } %>
</div>